form.login-form(name = 'loginForm' ng-submit = 'loginForm.$valid && logCtrl.sendRegistration(logCtrl, booksCtrl)' novalidate)
  img.new-book-img(ng-src = '../assets/add_book.svg' alt = '')
  h4.login-title
    | Iniciar sesi&oacute;n
  span.error {{logCtrl.error}}
  .email
    span.form-label
      | Email
    input.form-input(type = 'email' name = 'email' ng-model = 'logCtrl.email' required)
    ng-messages.error(for = 'loginForm.email.$error' role = 'alert')
      ng-message(when = 'email')
        | El email debe tener un formato valido
  .password
    span.form-label
      | Contrase&ntilde;a
    input.form-input(type = 'password' name = 'pass' ng-model = 'logCtrl.pass' ng-minlength = '8' ng-maxlength = '52' required)
    ng-messages.error(for = 'loginForm.pass.$error' role = 'alert')
      ng-message(when = 'pattern')
        | La contrase&ntilde;a debe tener por lo menos una letra y un numero
      ng-message(when = 'minlength')
        | La contrase&ntilde;a debe tener por lo menos 8 caracteres
      ng-message(when = 'maxlength')
        | La contrase&ntilde;a debe tener menos de 52 caracteres
  .send-cancel
    button.cancel(ng-click = '$close()')
      | Cancelar
    input.send(type = 'submit' name = 'submit' ng-model = 'logCtrl.email' value = 'Aceptar')
